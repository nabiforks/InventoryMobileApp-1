<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="team8.inventorymobileapp.com.inventorymobileapp.ListReqActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/table1"

        android:stretchColumns="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtRCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Code"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Quantity"
                android:textSize="18sp" />

        </TableRow>

        <TableRow>


            <TextView
                android:id="@+id/txtNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="18sp" />/>
        </TableRow>
    </TableLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/table1"
        android:layout_above="@id/table2">
    <team8.inventorymobileapp.com.inventorymobileapp.DetailListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/table2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Remark"
            android:textSize="18sp" />
    </TableRow>

        <TableRow>


            <EditText
                android:id="@+id/Remark"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColorLink="@android:color/black" />
    </TableRow>



        <Button
            android:id="@+id/btnApprove"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:backgroundTint="#38cf3b"
            android:text="@string/btnApprove" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="@string/btnReject" />





</TableLayout>
</RelativeLayout>




