<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/lblTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="Disbursement Details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CpName"
                        android:textSize="15dp"
                         />

                    <TextView
                        android:id="@+id/tvCollectionPoint"
                        android:layout_width="200dp"
                        android:layout_height="27dp"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DeptName"
                        android:textSize="15dp"
                         />

                    <TextView
                        android:id="@+id/tvDepartmentName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RepName"
                        android:textSize="15dp"
                         />

                    <TextView
                        android:id="@+id/tvReprsentativeName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DisburseCode"
                        android:textSize="15dp"
                         />

                    <TextView
                        android:id="@+id/tvDisbursementNumber"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Status"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/tvstatus"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp" />


                </TableRow>
            </TableLayout>

            <ListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_gravity="right"
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:text="@string/buttonAcknowledge"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>