<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    tools:context="team8.inventorymobileapp.com.inventorymobileapp.RequestListActivity">
    <TextView
        android:id="@+id/rfaNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_marginRight="55dp"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:id="@+id/lvRequest"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Retrieval Form>"
        android:id="@+id/btnGenerateRetrievalForm"
        app:layout_constraintTop_toBottomOf="@id/lvRequest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        />


</android.support.constraint.ConstraintLayout>
