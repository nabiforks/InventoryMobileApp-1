<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:background="@drawable/bg_dark_background">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <ImageButton
            android:id="@+id/wcSClerkRequestList"
            android:src="@drawable/ic_1_request_list"
            android:scaleType="centerInside"
            android:layout_width="110dp"
            android:layout_height="128dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>
        <ImageButton
            android:id="@+id/wcSClerkRetrieval"
            android:src="@drawable/ic_2_retrieval4"
            android:scaleType="fitCenter"
            android:layout_width="110dp"
            android:layout_height="128dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>
        <ImageButton
            android:id="@+id/wcSClerkAllocation"
            android:src="@drawable/ic_3_allocation4"
            android:scaleType="fitCenter"
            android:layout_width="110dp"
            android:layout_height="128dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wcSClerkDisbursementDate"
            android:src="@drawable/ic_4_disbursement_date"
            android:scaleType="fitCenter"
            android:layout_width="110dp"
            android:layout_height="128dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>

        <ImageButton
            android:id="@+id/wcSClerkDisbursementForm"
            android:src="@drawable/ic_5_disbursement_form"
            android:scaleType="fitCenter"
            android:layout_width="110dp"
            android:layout_height="128dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>
    </LinearLayout>

</LinearLayout>
