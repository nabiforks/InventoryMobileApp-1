<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"

    android:background="@drawable/bg_dark_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp">
        <ImageButton
            android:id="@+id/wcDeptHeadRequest"
            android:src="@drawable/ic_1_request_list"
            android:scaleType="centerInside"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>
        <ImageButton
            android:id="@+id/wcDeptHeadAssignRoleList"
            android:src="@drawable/ic_2_assign_role_list"
            android:scaleType="fitCenter"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="18dp">
        <ImageButton
            android:id="@+id/wcDeptHeadAssignRole"
            android:src="@drawable/ic_3_assign_role"
            android:scaleType="centerInside"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:padding="0dp"
            android:layout_margin="6dp"/>


    </LinearLayout>


</LinearLayout>
